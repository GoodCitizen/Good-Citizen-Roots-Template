// Brand colors
$brand-gray-darker = #26282D
$brand-gray-dark = #43444C
$brand-gray = #93979E
$brand-gray-light = #C1C8CC
$brand-gray-lighter = #F2F2F2

// Body background color
$body-bg = $white

// Text highlight color
$highlight-color = $blue

// Custom image base path for axis mixins
$img-path = '/img/'

// Ligatures
$ligatures = false
